<config>
    <prefix chat='/' muc='!' />
    <!--Bot authorization details-->
    <auth jid='botname@server' pass='password' priority='10' server='servername' />
    <rooms>
        <muc room='c1@conference.localhost' nick='SleekBot' />
    </rooms>
    <!--Location of the sqlite3 database used for persistent storage.-->
    <storage file='test.sqlite' />

<!--When this is set, the bot will ignore requests from anyone who isn't a member (see <users>). When it isn't set, the bot will respond to anyone except outcasts. If you run the bot in an anonymous room, you almost certainly want this set to false-->
<!--  <require-membership /> -->

<!--Users the bot knows about. Owners have full access to the bot, admins have the next layer of access. If require-membership is set, the bot won't respond to anyone unless they have at least a member entry. Banned users are always ignored.-->
    <acl>
        <owner>
            <jid>test@localhost</jid>
            <jid>anotherjid@backupserver.com</jid>
        </owner>
        <admin>
            <jid>trusteduser@server.com</jid>
        </admin>
        <user>
            <jid>arbitrarybotuser@server.com</jid>
            <jid>trustedserver.com</jid>
        </user>
        <banned>
            <jid>banneduser@server.com</jid>
        </banned>
    </acl>

    <plugins>
        <bot>
            <plugin name='Admin' />
            <plugin name='Alias' />
            <plugin name='BotMath'/>
            <plugin name='Factoid'/>
            <plugin name='Filter' />
            <plugin name='Slap' module='fun'>
            	<config>
	            	<verbs>
	            		slaps,hits,smashes,beats,bashes,smacks,blats,
	               		punches,stabs
	               	</verbs>
	        		<size>
	        			a large,an enormous,a small,a tiny,a medium sized,
	              		an extra large,a questionable,a suspicious,a terrifying,
	              		a scary,a breath taking,a horrifying
	              	</size>
	        		<tools>
	        			trout,fork,mouse,piano,cello,vacuum,finetuned sledgehammer,
	               		sewing needle,Windows ME user guide,christmas tree,axe,
	               		iron bar,cello,set of Windows 3.11 floppies,MS IIS
	               	</tools>
	        	</config>
       		</plugin>
            <plugin name='GetTune' />
            <plugin name='IrssiLogs'>
            	<config>
            		<log room='c1@conference.localhost' file='c1@conference.localhost' />
            	</config>
            </plugin>
            <plugin name='LDAPBot' />
            <plugin name='Mood' />
            <plugin name='MUCStability' />
            <plugin name='Others'/>
            <plugin name='Remember'/>
			<plugin name='RSSBot'>
				<config>
					<feed url='https://github.com/andyhelp/SleekBot/commits/develop.atom' refresh='1'>
						<muc room='test@conference.jabber.org' />
					</feed>
					<feed url='https://github.com/hgrecco/SleekBot/commits/develop.atom' refresh='1'>
						<muc room='test@conference.jabber.org' />
					</feed>
					<!--feed url='https://github.com/timeline.' refresh='0.1'>
						<muc room='test@conference.jabber.org' />
					</feed-->
				</config>
			</plugin>
			<plugin name='Seen' />
			<plugin name='Stats'	module='stats' />
			<plugin name='Info'		module='stats' />
			<plugin name='CmdStats'	module='stats' />
            <plugin name='XEPinfo'>
                <config>
                    <xeps url='http://www.xmpp.org/extensions/xeps.xml'/>
                    <cache expiry='6' />
                </config>
            </plugin>
            <plugin name='XMRadio' />
        </bot>
        <xmpp>
            <plugin name='xep_0030' />
            <plugin name='xep_0004' />
            <plugin name='xep_0045' />
            <plugin name='xep_0050' />
            <plugin name='xep_0060' />
            <plugin name='xep_0199' />
            <plugin name='xep_0092' >
                <config name='SleekBot' version= '0.3' />
            </plugin>
        </xmpp>
    </plugins>
</config>
